header 
  a(href="/").header__logo
    i.fas.fa-bars
    i.fab.fa-youtube  
    span Taektube
  nav
    ul 
      li
        a(href="/search")
          i.fas.fa-search
            span 검색
      if loggedIn
        li
          a(href="/videos/upload")
            i.fas.fa-upload
              span 업로드
        li
          a(href="/users/edit")
            i.fas.fa-user
              span 프로필 수정
        li 
          a(href="/users/logout")
            i.fas.fa-sign-out-alt
              span 로그아웃
        li
          a(href=`/users/${loggedInUser._id}`) 
            if !loggedInUser.avatarUrl
              span.none-avatar 😂
            else 
              if isHeroku 
                img(src=loggedInUser.avatarUrl).header__avatar
              else
                if loggedInUser.avatarUrl.includes("github" || "kakao")
                  img(src=loggedInUser.avatarUrl).header__avatar
                else
                  img(src="/"+loggedInUser.avatarUrl).header__avatar
      else
        li 
          a(href="/join")
            span 회원가입
        li 
          a(href="/login") 
            div.header__btn
              i.fas.fa-user-circle
                span 로그인